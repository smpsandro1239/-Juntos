# +JUNTOS - Backend Environment Variables
# Copy this file to .env and adjust the values for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=juntos_dev
DB_USER=juntos_user
DB_PASSWORD=juntos_pass

# Server Configuration
PORT=8080

# JWT Configuration (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400000

# Redis Configuration (for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External APIs (for future integrations)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration (for future image uploads)
UPLOAD_PATH=/tmp/juntos/uploads
MAX_FILE_SIZE=10MB

# Logging
LOG_LEVEL=DEBUG

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Application Settings
APP_NAME=+JUNTOS
APP_VERSION=1.0.0
APP_ENV=development
