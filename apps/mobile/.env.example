# +JUNTOS - Mobile App Environment Variables
# Copy this file to .env and adjust the values for your environment
# Note: Flutter uses --dart-define for environment variables

# API Configuration
API_BASE_URL=http://10.0.2.2:8080
API_TIMEOUT=10000

# Authentication (for future auth)
JWT_SECRET=your-mobile-jwt-secret

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# App Configuration
APP_NAME=+JUNTOS
APP_VERSION=1.0.0
APP_ENV=development

# Database (local SQLite)
DATABASE_NAME=juntos.db
DATABASE_VERSION=1

# Cache Settings
CACHE_MAX_AGE=3600000
OFFLINE_MODE_ENABLED=true

# Analytics (for future)
ENABLE_ANALYTICS=false
FIREBASE_PROJECT_ID=your-firebase-project

# Push Notifications (for future)
ENABLE_PUSH_NOTIFICATIONS=false
FCM_SERVER_KEY=your-fcm-server-key

# Development
ENABLE_DEVTOOLS=true
ENABLE_LOGGING=true
